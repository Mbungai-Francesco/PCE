generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model MissionDrone {
  // Use UUID primary keys on Postgres
  id                      String                  @id @default(uuid()) @db.Uuid
  dateDebutVol            DateTime
  dateFinVol              DateTime
  typeMission             String?
  capteurUtilise          String
  statutValidation        Boolean
  motDePasse              String
  motsCles                String
  nomProprietaire         String
  emailProprietaire       String                  
  entrepriseProprietaire  String

  generale                MetadonneesGenerales?
  technique               MetadonneesTechniques?
  admin                   MetadonneesAdmin?
}

model MetadonneesGenerales {
  id            String       @id @default(uuid()) @db.Uuid
  idMission     String       @db.Uuid @unique
  mission       MissionDrone @relation(fields: [idMission], references: [id], onDelete: Cascade)
  titre         String
  resume        String
  categorieThematique String

  @@unique([id, idMission])
}

model MetadonneesTechniques {
  id            String       @id @default(uuid()) @db.Uuid
  idMission     String       @db.Uuid @unique
  mission       MissionDrone @relation(fields: [idMission], references: [id], onDelete: Cascade)
  datePublication DateTime
  xMin          Float
  yMin          Float
  xMax          Float
  yMax          Float
  debut         DateTime?
  fin           DateTime?
  @@unique([id, idMission])

  // PostGIS geometry column (store bounding box or geometry). Prisma does not
  // natively support PostGIS types, so declare as Unsupported("geometry").
  // You will still need to enable PostGIS in the DB and manage migrations to
  // create/alter this column (see notes after this change).
  // bbox          Unsupported("geometry")?
}

model MetadonneesAdmin {
  id            String       @id @default(uuid()) @db.Uuid
  idMission     String       @db.Uuid @unique
  mission       MissionDrone @relation(fields: [idMission], references: [id], onDelete: Cascade)
  langue        String
  SRS_CRSUtilise String
  contraintesLegales String
  @@unique([id, idMission])
}